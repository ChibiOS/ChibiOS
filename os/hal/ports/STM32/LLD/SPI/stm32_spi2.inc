/* Registry checks for robustness.*/
#if !defined(STM32_HAS_SPI2)
#error "STM32_HAS_SPI2 not defined in registry"
#endif

#if STM32_HAS_SPI2

/* Checks on vector names and numbers definitions.*/
#if !defined(STM32_SPI2_NUMBER)
#error "STM32_SPI2_NUMBER not defined in stm32_irq.h"
#endif
#if !defined(STM32_SPI2_HANDLER)
#error "STM32_SPI2_HANDLER not defined in stm32_irq.h"
#endif

/* Checks for mcuconf.h correctness.*/
#if !defined(STM32_SPI_USE_SPI2)
#error "STM32_SPI_USE_SPI2 not defined in mcuconf.h"
#endif

#if !defined(STM32_IRQ_SPI2_PRIORITY)
#error "STM32_IRQ_SPI2_PRIORITY not defined in mcuconf.h"
#endif

/* Priority settings checks.*/
#if !OSAL_IRQ_IS_VALID_PRIORITY(STM32_IRQ_SPI2_PRIORITY)
#error "Invalid IRQ priority assigned to STM32_IRQ_SPI2_PRIORITY"
#endif

#endif /* STM32_HAS_SPI2 */


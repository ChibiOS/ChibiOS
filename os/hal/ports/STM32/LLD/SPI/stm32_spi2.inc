static inline void spi2_irq_init(void) {
#if defined(STM32_SPI2_IS_USED)
  nvicEnableVector(STM32_SPI2_NUMBER, STM32_IRQ_SPI2_PRIORITY);
#endif
}

static inline void spi2_irq_deinit(void) {
#if defined(STM32_SPI2_IS_USED)
  nvicDisableVector(STM32_SPI2_NUMBER);
#endif
}

/*===========================================================================*/
/* Driver interrupt handlers.                                                */
/*===========================================================================*/

#if defined(STM32_SPI2_IS_USED) || defined(__DOXYGEN__)
/**
 * @brief   SPI2 interrupt handler.
 *
 * @isr
 */
OSAL_IRQ_HANDLER(STM32_SPI2_HANDLER) {

  OSAL_IRQ_PROLOGUE();

  spi_lld_serve_interrupt(&SPID2);

  OSAL_IRQ_EPILOGUE();
}
#endif

